<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.synthetech.synergyeventmanager.CreateFragment">

    <!--Layout starts here-->

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/name_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Name of Event"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/date_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Date (dd/mm/yyyy)"
                    android:inputType="date" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select relevant departments" />
            </android.support.design.widget.TextInputLayout>


            <Switch
                android:id="@+id/management_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Management (President, Vice-President, etc)" />

            <Switch
                android:id="@+id/marketing_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marketing (Advertising, Sponsorship, etc)" />

            <Switch
                android:id="@+id/creative_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Creative (Decoration, Digital Imaging, etc)" />

            <Switch
                android:id="@+id/finance_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Finance (Treasurer, Sponsor, etc)" />

            <Switch
                android:id="@+id/guest_managers_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guest Managers (List managers, ushers, etc)" />

            <Switch
                android:id="@+id/sales_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sales" />

            <Switch
                android:id="@+id/fnb_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FnB (Food, Beverages, etc)" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.10" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/website_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Event Website" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/organisation_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Organisation" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/venue_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Venue" />
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/button_create"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="319dp"
                    android:layout_height="wrap_content"
                    android:text="Create" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <!--Layout ends here-->

</FrameLayout>
